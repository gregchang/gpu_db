    %>

    <table id="table_id" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
      <tr>
        <th>Name</th>
        <th>Length (mm</th>
        <th>Width (mm)</th>
        <th>Height (mm)</th>
        <th>Backplate</th>
      </tr>
      </thead>
      <tbody>
      <% Product.all.each do |row| %>
          <tr>
            <td><%= row["name"] %>
              <a target="_blank" href="<%= row["imgurl"] %>" data-toggle="tooltip" data-placement="right" title="<img src='<%= row["imgurl"] %>' />">Image</a>
            </td>
            <td><%= row["length"] %></td>
            <td><%= row["width"] %></td>
            <td><%= row["height"] %></td>
            <td>
              <%
                if row["backplate"] == 1
                  backplate_text = '&#x2713;'
                else
                  backplate_text = '&#x2717;'
                end
              %>
              <%= HTMLEntities.new.decode(backplate_text) %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>


  </div>
